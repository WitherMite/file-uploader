generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt   DateTime
}

model user {
    id  Int  @id @default(autoincrement())
    username String @unique
    password String
    files file[]
    folders folder[]
}

model folder {
    id Int @id @default(autoincrement())
    user user @relation(fields: [userId], references: [id])
    userId Int
    files file[]
    name String @unique
}

model file {
    id Int @id @default(autoincrement())
    user user @relation(fields: [userId], references: [id])
    userId Int
    folder folder? @relation(fields: [folderId], references: [id])
    folderId Int?
    filename String @unique
    name String
    path String 
    size Int
    mimetype String
    createdAt DateTime @default(now())
}